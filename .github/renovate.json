{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommitTypeAll(chore)"
  ],
  "semanticCommits": "enabled",
  "labels": [
    "dependencies"
  ],
  "git-submodules": {
    "enabled": false
  },
  "gradle": {
    "managerFilePatterns": [
      "/(^|/)build.gradle.kts$/",
      "/(^|/)settings.gradle.kts$/"
    ]
  },
  "gomod": {
    "managerFilePatterns": [
      "/libcore/go.mod$/"
    ]
  },
  "github-actions": {
    "managerFilePatterns": [
      "/.github/workflows/.*.yml$/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "semanticCommitType": "ci",
      "addLabels": [
        "github_action"
      ]
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchPackageNames": [
        "github.com/sagernet/sing-box",
        "github.com/sagernet/gomobile",
        "github.com/dyhkwong/sing-juicity",
        "github.com/xchacha20-poly1305/cazilla",
        "github.com/xchacha20-poly1305/sing-trusttunnel"
      ],
      "enabled": true,
      "postUpdateOptions": [
        "gomodTidy"
      ],
      "addLabels": [
        "go"
      ]
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePrefixes": [
        "androidx.core",
        "androidx.appcompat",
        "androidx.activity",
        "androidx.browser",
        "androidx.lifecycle",
        "androidx.work",
        "androidx.datastore",
        "androidx.camera",
        "androidx.room"
      ],
      "groupName": "AndroidX",
      "groupSlug": "androidx"
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePrefixes": [
        "androidx.compose"
      ],
      "matchPackageNames": [
        "androidx.activity:activity-compose",
        "androidx.lifecycle:lifecycle-runtime-compose",
        "androidx.lifecycle:lifecycle-viewmodel-compose",
        "androidx.navigation:navigation-compose"
      ],
      "groupName": "AndroidX Compose",
      "groupSlug": "androidx-compose"
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePrefixes": [
        "org.jetbrains.kotlin"
      ],
      "groupName": "Kotlin",
      "groupSlug": "kotlin"
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePrefixes": [
        "com.android.tools"
      ],
      "groupName": "Android tools",
      "groupSlug": "android-tools"
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePrefixes": [
        "com.google."
      ],
      "groupName": "Google",
      "groupSlug": "google"
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePrefixes": [
        "com.google.accompanist",
        "me.zhanghai.compose.preference",
        "io.github.oikvpqya.compose.fastscroller"
      ],
      "groupName": "Compose ecosystem",
      "groupSlug": "compose-ecosystem"
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePrefixes": [
        "org.junit"
      ],
      "groupName": "JUnit",
      "groupSlug": "junit"
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "addLabels": [
        "java"
      ]
    },
    {
      "matchPackageNames": [
        "com.google.guava:guava"
      ],
      "allowedVersions": "/-android$/"
    }
  ]
}

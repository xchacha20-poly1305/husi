<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppNameAppearanceHusi" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/shuowenxiaozhuan_husi</item>
        <item name="fontFamily">@font/shuowenxiaozhuan_husi</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppNameAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.App.ExposedDropdownAutoCompleteTextView" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppearanceFoundation.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">
            @style/Widget.App.Button.TextButton.Dialog.Primary
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Widget.App.Button.TextButton.Dialog.Primary
        </item>
        <item name="buttonBarNeutralButtonStyle">
            @style/Widget.App.Button.TextButton.Dialog.Flush.Primary
        </item>
    </style>

    <style name="Widget.App.Button.TextButton.Dialog.Primary" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?primaryOrTextPrimary</item>
    </style>

    <style name="Widget.App.Button.TextButton.Dialog.Flush.Primary" parent="Widget.Material3.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">?primaryOrTextPrimary</item>
    </style>

    <style name="Widget.App.Chip.Choice" parent="Widget.Material3.Chip.Filter">
        <item name="chipStartPadding">30dp</item>
        <item name="chipEndPadding">30dp</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">?primaryOrTextPrimary</item>
        <item name="rippleColor">@color/chip_ripple_color</item>
    </style>

    <!-- https://github.com/RikkaApps/RikkaX -->
    <style name="TextAppearance.Rikka.PreferenceTitle.Material3" parent="@style/TextAppearance.AppCompat.Subhead">
        <!--<item name="android:fontFamily">@string/settingslib_config_headlineFontFamily</item>-->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Rikka.CategoryTitle.Material3" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Rikka.Preference.HorizontalProgressBar.Material3" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/m3_progress_horizontal</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="ThemeOverlay.Rikka.Material3.Preference" parent="">
        <item name="android:textAppearanceListItem">
            @style/TextAppearance.Rikka.PreferenceTitle.Material3
        </item>
        <item name="android:listPreferredItemPaddingStart">24dp</item>
        <item name="android:listPreferredItemPaddingLeft">24dp</item>
        <item name="android:listPreferredItemPaddingEnd">16dp</item>
        <item name="android:listPreferredItemPaddingRight">16dp</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Rikka.Material3</item>
        <item name="android:progressBarStyleHorizontal">
            @style/Widget.Rikka.Preference.HorizontalProgressBar.Material3
        </item>
        <item name="colorBackgroundFloating">?colorSurface</item>
    </style>

    <style name="PreferenceThemeOverlay.Rikka.Material3" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceCategoryTitleTextAppearance">
            @style/TextAppearance.Rikka.CategoryTitle.Material3
        </item>
        <item name="preferenceCategoryTitleTextColor">?colorPrimary</item>
        <item name="preferenceCategoryStyle">@style/Preference.Rikka.Category.Material3</item>
        <item name="preferenceStyle">@style/Preference.Rikka.Material3</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.Rikka.CheckBoxPreference.Material3
        </item>
        <item name="dialogPreferenceStyle">@style/Preference.Rikka.Material3</item>
        <item name="editTextPreferenceStyle">@style/Preference.Rikka.EditTextPreference.Material3
        </item>
        <item name="dropdownPreferenceStyle">@style/Preference.Rikka.DropdownPreference.Material3
        </item>
        <item name="switchPreferenceStyle">@style/Preference.Rikka.SwitchPreference.Material3</item>
        <item name="seekBarPreferenceStyle">@style/Preference.Rikka.SeekbarPreference.Material3
        </item>
        <item name="simpleMenuPreferenceStyle">
            @style/Preference.Rikka.SimpleMenuPreference.Material3
        </item>
        <item name="materialSwitchPreferenceStyle">@style/Preference.Rikka.MaterialSwitchPreference
        </item>
    </style>

    <style name="Preference.Rikka.Category.Material3" parent="@style/Preference.Category.Material">
        <item name="android:layout">@layout/m3_preference_category</item>
        <item name="iconSpaceReserved">@bool/config_preference_iconSpaceReserved</item>
        <item name="allowDividerAbove">@bool/config_preference_allowDivider</item>
        <item name="allowDividerBelow">@bool/config_preference_allowDivider</item>
    </style>

    <style name="Preference.Rikka.Material3" parent="@style/Preference.Material">
        <item name="layout">@layout/m3_preference</item>
        <item name="iconSpaceReserved">@bool/config_preference_iconSpaceReserved</item>
    </style>

    <style name="Preference.Rikka.CheckBoxPreference.Material3" parent="@style/Preference.CheckBoxPreference.Material">
        <item name="layout">@layout/m3_preference</item>
        <item name="iconSpaceReserved">@bool/config_preference_iconSpaceReserved</item>
    </style>

    <style name="Preference.Rikka.EditTextPreference.Material3" parent="@style/Preference.DialogPreference.EditTextPreference.Material">
        <item name="layout">@layout/m3_preference</item>
        <item name="iconSpaceReserved">@bool/config_preference_iconSpaceReserved</item>
    </style>

    <style name="Preference.Rikka.DropdownPreference.Material3" parent="@style/Preference.DropDown.Material">
        <item name="layout">@layout/m3_dropdown_preference</item>
        <item name="iconSpaceReserved">@bool/config_preference_iconSpaceReserved</item>
    </style>

    <style name="Preference.Rikka.SwitchPreference.Material3" parent="@style/Preference.SwitchPreference.Material">
        <item name="layout">@layout/m3_preference</item>
        <item name="iconSpaceReserved">@bool/config_preference_iconSpaceReserved</item>
    </style>

    <style name="Preference.Rikka.SeekbarPreference.Material3" parent="@style/Preference.SeekBarPreference.Material">
        <item name="iconSpaceReserved">@bool/config_preference_iconSpaceReserved</item>
    </style>

    <style name="Preference.Rikka.SimpleMenuPreference.Material3" parent="@style/Preference.SimpleMenuPreference">
        <item name="android:layout">@layout/m3_preference_simplemenu</item>
        <item name="android:popupMenuStyle">
            @style/Widget.Preference.SimpleMenuPreference.PopupMenu.Material3
        </item>
        <item name="android:popupTheme">
            @style/ThemeOverlay.Preference.SimpleMenuPreference.PopupMenu.Material3
        </item>
        <item name="iconSpaceReserved">@bool/config_preference_iconSpaceReserved</item>
    </style>

    <style name="Widget.Preference.SimpleMenuPreference.PopupMenu.Material3" parent="@style/Widget.Preference.SimpleMenuPreference.PopupMenu">
        <item name="android:popupBackground">@drawable/m3_simple_menu_background</item>
    </style>

    <style name="ThemeOverlay.Preference.SimpleMenuPreference.PopupMenu.Material3" parent="ThemeOverlay.Preference.SimpleMenuPreference.PopupMenu">
        <item name="popupBackgroundRadius">8dp</item>
    </style>

    <style name="Preference.Rikka.MaterialSwitchPreference" parent="Preference.Rikka.SwitchPreference.Material3">
        <item name="android:widgetLayout">@layout/m3_preference_widget_material_switch</item>
    </style>

</resources>
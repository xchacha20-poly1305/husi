<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.tools.ToolsFragment">

    <include
        layout="@layout/layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/log_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="64dp"
        android:scrollbars="none"
        app:fastScrollEnabled="true"
        app:fastScrollHorizontalThumbDrawable="@drawable/fastscroll_thumb_thick"
        app:fastScrollHorizontalTrackDrawable="@drawable/fastscroll_track_thick"
        app:fastScrollVerticalThumbDrawable="@drawable/fastscroll_thumb_thick"
        app:fastScrollVerticalTrackDrawable="@drawable/fastscroll_track_thick"
        app:layoutManager="io.nekohasekai.sagernet.widget.FixedLinearLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>